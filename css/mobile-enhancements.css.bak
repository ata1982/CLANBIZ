/**
 * モバイルUX向上のための追加CSS
 */

/* モバイル向けナビゲーションタッチターゲットサイズの改善 */
@media (max-width: 768px) {
  /* 全体的なモバイル調整 */
  body {
    -webkit-text-size-adjust: 100%;
  }

  /* タッチターゲットサイズの改善 */
  .global-nav a, 
  .nav-item a,
  .footer-nav a,
  .btn, 
  button,
  .service-btn,
  .cta-button {
    padding: 12px 16px; /* より大きなタッチターゲット */
    min-height: 44px; /* Appleのガイドラインに基づく最小高さ */
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  /* ナビゲーション項目のスペーシング */
  .global-nav li,
  .nav-item {
    margin: 8px 0;
  }

  /* フォントサイズとリーダビリティの調整 */
  p, .service-text, .blog-content, .article-content p {
    font-size: 16px; /* 読みやすいベースフォントサイズ */
    line-height: 1.6; /* 適切な行間 */
    letter-spacing: 0.01em;
  }

  /* 見出しの調整 */
  h1, .hero-title {
    font-size: 2.5rem;
    line-height: 1.2;
  }

  h2, .section-title {
    font-size: 2rem;
    line-height: 1.3;
  }

  h3, .service-title {
    font-size: 1.3rem;
    line-height: 1.4;
  }

  /* CTAボタンをより目立たせる */
  .cta-button,
  .hero-cta-btn,
  .service-btn,
  .btn-contact,
  .newsletter-submit {
    width: 100%; /* モバイルでは横幅いっぱい */
    padding: 16px 20px;
    font-size: 16px;
    font-weight: 600;
    margin: 8px 0;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  /* ニュースレターフォームの調整 */
  .newsletter-container {
    padding: 25px 15px;
  }

  .form-group input,
  .form-group select {
    padding: 14px 12px;
    font-size: 16px;
  }
  
  /* リンクのホバー状態をタップで有効にするためにアクティブ状態も設定 */
  a:active,
  .service-btn:active,
  .cta-button:active,
  .btn:active {
    opacity: 0.8;
    transform: translateY(1px);
  }

  /* 画像の最適化 - 小さい画面でのアスペクト比を調整 */
  .service-image {
    height: auto;
    max-height: 200px;
    overflow: hidden;
  }

  /* リンクとボタンの間隔 - 誤タップ防止 */
  .link-group a,
  .btn-group button,
  .social-links a {
    margin: 0 8px 8px 0;
  }
  
  /* スクロール感度の調整 */
  html, body {
    scroll-behavior: smooth;
    scroll-padding-top: 60px; /* ヘッダー高さに合わせる */
  }
}

/* タブレット向けの調整 */
@media (min-width: 769px) and (max-width: 1024px) {
  .hero-title {
    font-size: 3.5rem;
  }
  
  .section-title {
    font-size: 2.5rem;
  }
  
  .service-title {
    font-size: 1.5rem;
  }
  
  .newsletter-container {
    padding: 30px;
  }
}
